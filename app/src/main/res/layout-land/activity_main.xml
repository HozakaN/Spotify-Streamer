<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.hozakan.spotifystreamer.ui.fragment.SearchArtistFragment">

    <fragment
        android:id="@+id/search_artist_fragment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:name="com.hozakan.spotifystreamer.ui.fragment.SearchArtistFragment" />

    <FrameLayout
        android:id="@+id/artist_top_ten_container"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent" />

</LinearLayout>